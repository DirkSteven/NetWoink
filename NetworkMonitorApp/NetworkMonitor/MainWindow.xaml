<Window x:Class="NetworkMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkMonitor"
        mc:Ignorable="d"
        Title="NetworkMonitor" Height="470" Width="829">
    <Border Padding="10" >
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*" />

                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="IP" TextBlock.TextAlignment="Center" Margin="10 5 10 5 " Padding="80 0 0 0 "></Label>
                <GridSplitter Grid.Column="0" BorderThickness="1" BorderBrush="Bisque" ></GridSplitter>
                <Label Grid.Column="1" Content="MAC" Margin="10 5 10 5 " Padding="80 0 0 0 "></Label>
                <GridSplitter Grid.Column="1" BorderThickness="1" BorderBrush="Bisque" ></GridSplitter>
                <Label Grid.Column="2" Content="NAME" Margin="10 5 10 5 " Padding="80 0 0 0 "></Label>
                <GridSplitter Grid.Column="2" BorderThickness="1" BorderBrush="Bisque" ></GridSplitter>
                <Label Grid.Column="3" Content="VENDOR" Margin="10 5 10 5 " Padding="80 0 0 0 "></Label>
    
            </Grid>
            <StackPanel Orientation="Horizontal">
                <Label Content="Devices" FontWeight="Bold"/>
                <Separator Width="720"></Separator>
            </StackPanel>
            
            <Label Content="Gateway" FontWeight="Bold"/>
            <Label Content="Own Device" FontWeight="Bold"/>
            

            <Grid Margin="0 270 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />

                </Grid.ColumnDefinitions>
                <Button x:Name="ScanButton" Click="ScanButton_Click"  Grid.Column="0" Content="SCAN" Margin="10 5 10 5 "></Button>
                <Button x:Name="RefreshButton" Click="RefreshButton_Click" Grid.Column="1" Content="REFRESH" Margin="10 5 10 5 "></Button>
                <Button x:Name="SnifferBuutton" Click="SnifferBuutton_Click" Grid.Column="2" Content="SNIFFER" Margin="10 5 10 5 "></Button>
                <Button x:Name="OptionButton" Click="OptionButton_Click" Grid.Column="3" Content="OPTION" Margin="10 5 10 5 "></Button>
                <Button x:Name="AboutButton" Click="AboutButton_Click" Grid.Column="4" Content="ABOUT" Margin="10 5 10 5 "></Button>
                <Button x:Name="DevicesButton" Click="DevicesButton_Click" Grid.Column="5" Content="DEVICES: " Margin="10 5 10 5 "></Button>

            </Grid>
            

        </StackPanel>
    </Border>
</Window>
